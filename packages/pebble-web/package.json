  "main": "dist/pebble-web.js",
  "esnext": "dist/pebble-web.es.js",
  "module": "dist/pebble-web.module.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/pebble-web.umd.js",
  "sideEffects": false,
  "files": [
    "dist",
    "native",
    "src"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && rollup -c && rimraf compiled",
    "build:watch": "chokidar 'src/**/*.ts' 'src/**/*.tsx' -c 'yarn build'",
    "pretest": "tslint ./src/**/*.{ts,tsx} ./stories/**/*.{ts,tsx} ./{tests,typings}/**/*.{ts,tsx}",
    "test": "jest --coverage",
    "prepublishOnly": "yarn build && yarn test",
    "test:watch": "yarn jest --watchAll"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.3.4",
    "pebble-shared": "^1.0.5",
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "dependencies": {
    "date-fns": "^2.7.0",
    "emotion": "^10.0.14",
    "is-in-browser": "^1.1.3",
    "just-debounce-it": "^1.1.0",
    "mitt": "^1.2.0",
    "react-calendar": "^3.0.0",
    "react-ink": "^6.4.0",
    "react-popper": "^1.3.6",
    "react-spring": "^8.0.27",
    "rheostat": "2.2.0",
    "rifm": "^0.11.0",
    "scroll-into-view-if-needed": "^2.2.20",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "pebble-shared": "^2.0.1"
