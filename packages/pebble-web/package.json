{
  "name": "@anarock/pebble",
  "version": "0.26.0",
  "author": "ritz078 <rkritesh078@gmail.com>",
  "license": "MIT",
  "main": "dist/pebble.js",
  "module": "dist/pebble.es.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/pebble.umd.js",
  "files": [
    "dist",
    "native"
  ],
  "dependencies": {
    "@types/react": "^16.4.18",
    "@types/rheostat": "^2.1.3",
    "date-fns": "^1.29.0",
    "emotion": "^9.2.12",
    "is-in-browser": "^1.1.3",
    "just-debounce-it": "^1.1.0",
    "mitt": "^1.1.3",
    "react": "^16.5.2",
    "react-calendar": "^2.17.4",
    "react-dom": "^16.5.2",
    "react-ink": "^6.4.0",
    "react-popper": "^1.0.2",
    "react-spring": "^5.9.2",
    "rheostat": "2.2.0",
    "utility-types": "^2.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "intersection-observer",
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/__setup__/setupFramework.ts",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(<rootDir>/(tests|src)/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage"
  }
}
