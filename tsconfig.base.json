{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2016"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "compiled",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ESNEXT",
    "typeRoots": ["./node_modules/@types", "./typings/npm"]
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "dist", "tests", "compiled", "src/**/__tests__"]
}
