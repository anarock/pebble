{
  "name": "@anarock/pebble",
  "version": "0.3.0",
  "author": "ritz078 <rkritesh078@gmail.com>",
  "license": "MIT",
  "main": "dist/pebble.js",
  "module": "dist/pebble.es.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rimraf dist && tsc -p tsconfig.base.json && rollup -c && rimraf compiled && cp -R './src/theme/fonts' './dist/fonts'",
    "build:watch": "chokidar 'src/**/*.ts' 'src/**/*.tsx' -c 'npm run build'",
    "test": "jest",
    "prepublish": "npm run test && npm run build",
    "test:watch": "npm test -- --watchAll",
    "precommit": "pretty-quick --staged",
    "format": "pretty-quick",
    "now-build": "npm run build-storybook",
    "now-start": "cd storybook-static && serve",
    "deploy": "npm run now-build && cd storybook-static && now"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "just-debounce-it": "^1.0.1",
    "mitt": "^1.1.3",
    "react-calendar": "^2.16.0",
    "react-emotion": "^9.2.5",
    "react-ink": "^6.4.0",
    "react-popper": "^1.0.0",
    "react-spring": "^5.4.0",
    "rheostat": "2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^v4.0.0-alpha.12",
    "@storybook/addon-actions": "^v4.0.0-alpha.12",
    "@storybook/addon-backgrounds": "^v4.0.0-alpha.12",
    "@storybook/addon-centered": "^v4.0.0-alpha.12",
    "@storybook/addon-console": "^1.0.4",
    "@storybook/addon-info": "^v4.0.0-alpha.12",
    "@storybook/addon-knobs": "^v4.0.0-alpha.12",
    "@storybook/addon-links": "^v4.0.0-alpha.12",
    "@storybook/addon-options": "^v4.0.0-alpha.12",
    "@storybook/addon-storysource": "^v4.0.0-alpha.12",
    "@storybook/addons": "^v4.0.0-alpha.12",
    "@storybook/react": "^v4.0.0-alpha.12",
    "@types/enzyme": "^3.1.11",
    "@types/jest": "^23.1.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/rheostat": "^2.1.3",
    "@types/sinon": "^5.0.1",
    "@types/storybook__react": "^3.0.8",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "combos": "^0.2.0",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jest-emotion": "^9.2.5",
    "moment": "^2.22.2",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.6.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "serve": "^9.2.0",
    "sinon": "^6.1.3",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "webpack": "^4.15.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/__setup__/setupFramework.ts",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(<rootDir>/(tests|src)/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    }
  }
}
