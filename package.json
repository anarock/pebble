    "webpack": "^4.41.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "git add"
    ],
    "./svgs/*.svg": [
      "imagemin-lint-staged",
      "yarn build:icons",
      "git add"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "@types/rheostat"
    ]
  }
}
