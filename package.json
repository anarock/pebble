{
  "name": "@anarock/pebble",
  "version": "0.30.0",
  "author": "ritz078 <rkritesh078@gmail.com>",
  "license": "MIT",
  "main": "dist/pebble.js",
  "module": "dist/pebble.es.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/pebble.umd.js",
  "files": [
    "dist",
    "native"
  ],
  "scripts": {
    "storybook": "start-storybook -p 6006 -s ./dist",
    "build:icons": "node ./scripts/generateIcon.js",
    "build-storybook": "yarn build && rimraf storybook-static && build-storybook -s ./dist",
    "build": "rimraf dist && tsc -p tsconfig.base.json && rollup -c && rimraf compiled && yarn build:icons && yarn copy:fonts",
    "build:watch": "chokidar 'src/**/*.ts' 'src/**/*.tsx' -c 'yarn build'",
    "test:cover": "yarn test && codecov",
    "pretest": "tslint ./src/**/*.{ts,tsx} ./stories/**/*.tsx ./{tests,typings}/**/*.ts",
    "test": "jest",
    "prepublishOnly": "yarn test && yarn build",
    "test:watch": "yarn jest --watchAll",
    "format": "pretty-quick",
    "now-build": "yarn build-storybook",
    "now-start": "cd storybook-static && serve",
    "deploy": "yarn now-build && cd storybook-static && now",
    "copy:fonts": "copy './dist/fonts/*.ttf' ./native/icons"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "git add"
    ],
    "./svgs/*.svg": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "emotion": "^9.2.12",
    "is-in-browser": "^1.1.3",
    "just-debounce-it": "^1.1.0",
    "mitt": "^1.1.3",
    "react": "^16.5.2",
    "react-calendar": "^2.17.5",
    "react-dom": "^16.5.2",
    "react-ink": "^6.4.0",
    "react-popper": "^1.0.2",
    "react-spring": "^5.9.2",
    "rheostat": "2.2.0",
    "scroll-into-view-if-needed": "^2.2.20",
    "utility-types": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@dump247/storybook-state": "^1.5.1",
    "@storybook/addon-a11y": "^4.0.2",
    "@storybook/addon-actions": "^4.0.2",
    "@storybook/addon-backgrounds": "^4.0.2",
    "@storybook/addon-centered": "^4.0.2",
    "@storybook/addon-console": "^1.0.4",
    "@storybook/addon-info": "^4.0.2",
    "@storybook/addon-knobs": "^4.0.2",
    "@storybook/addon-links": "^4.0.2",
    "@storybook/addon-options": "^4.0.2",
    "@storybook/addon-storysource": "^4.0.2",
    "@storybook/addon-viewport": "^4.0.2",
    "@storybook/addons": "^4.0.2",
    "@storybook/react": "^4.0.2",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.5",
    "@types/just-debounce-it": "^1.1.0",
    "@types/match-sorter": "^2.2.0",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/rheostat": "^2.1.3",
    "@types/sinon": "^5.0.5",
    "@types/storybook__addon-a11y": "^3.3.1",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-centered": "^3.3.1",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-emotion": "^9.2.11",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chokidar-cli": "^1.2.1",
    "codecov": "^3.1.0",
    "colors": "^1.3.2",
    "combos": "^0.2.0",
    "commitizen": "^3.0.2",
    "copy": "^0.3.2",
    "cz-conventional-changelog": "^2.1.0",
    "emotion-theming": "^9.2.9",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "execa": "^1.0.0",
    "file-loader": "^2.0.0",
    "husky": "^1.1.2",
    "imagemin-lint-staged": "^0.3.0",
    "intersection-observer": "^0.5.0",
    "jest": "^23.6.0",
    "jest-emotion": "^9.2.11",
    "just-entries": "^1.1.0",
    "lint-staged": "^8.1.0",
    "lodash.throttle": "^4.1.1",
    "match-sorter": "^2.3.0",
    "moment": "^2.22.2",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.6.2",
    "react-emotion": "^9.2.12",
    "react-native-vector-icons": "^6.0.2",
    "react-test-renderer": "^16.5.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "serve": "^10.0.2",
    "sinon": "^7.0.0",
    "svgo": "^1.1.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "webfonts-generator": "^0.4.0",
    "webpack": "^4.21.0"
  },
  "jest": {
    "preset": "ts-jest",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "intersection-observer",
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/__setup__/setupFramework.ts",
    "testMatch": [
      "**/?(*.)+(spec|test).(j|t)s?(x)"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  }
}
