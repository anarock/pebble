  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint"
    ],
    "./svgs/*.svg": [
      "imagemin-lint-staged",
      "yarn build:icons"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "@types/rheostat"
    ]
  }
